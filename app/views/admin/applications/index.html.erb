<h2>Job Applications</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Job Applied For</th>
      <th>Submitted</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @applications.each do |application| %>
      <tr>
        <td><%= application.name %></td>
        <td><%= application.email %></td>
        <td><%= application.job&.title || "N/A" %></td>
        <td><%= application.created_at.strftime("%d %b %Y") %></td>
        <td class="text-end">
          <%= link_to "View", admin_application_path(application), class: "btn btn-sm btn-primary" %>
          <%= link_to "Delete", admin_application_path(application),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this application?" },
                class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
