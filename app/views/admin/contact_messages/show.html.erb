<h2>Message Details</h2>

<div class="card shadow-sm mb-4">
  <div class="card-body">

    <p><strong>Name:</strong> <%= @contact_message.name %></p>
    <p><strong>Email:</strong> <%= @contact_message.email %></p>
    <p><strong>Phone:</strong> <%= @contact_message.phone %></p>

    <p><strong>Message:</strong></p>
    <p class="text-muted"><%= simple_format(@contact_message.message) %></p>

    <hr>

    <div class="text-end">
      <%= link_to "Back", admin_contact_messages_path, class: "btn btn-secondary" %>
      <%= link_to "Delete", admin_contact_message_path(@contact_message),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "btn btn-danger" %>
    </div>

  </div>
</div>
