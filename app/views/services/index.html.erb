<h2>Our Services</h2>
<div class="row">
  <% @services.each do |service| %>
    <div class="col-md-6 mb-3">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5><%= service.title %></h5>
          <p class="text-muted"><%= truncate(service.description, length: 180) %></p>
          <%= link_to "Read More", service_path(service), class: "btn btn-sm btn-outline-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
